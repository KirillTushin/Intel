#include <stdio.h>
 
/*
*  
* Сортировка текста на английском
* 
* Тушин Кирилл
* 
* 
*/


void gnom(char** mass, const int n);

int main()
{
    char text[256][256] = {},p, *ukaz[256] = {};   		//Двумерный массив из строк текста, и массив указателей на первый элемент
    int i,j,n;
    
    printf("Количество строк в тексте :\n");
    scanf("%d", &n);        							             //Спрашиваем количество строк в тексте
    scanf("%c", &p);      								            // Оставшийся \n ложим в ячейку р, что ы он не мешал нам
    
    printf ("Введите текст на английском из %d строк\n", n);
    
    for (i=0; i < n; i++)
    {
        for (j=0; (text[i][j] = getchar()) != '\n';j++ ) //Заполняем массив строками
        {
            if (j == 0) ukaz[i] = &text[i][j];    		   //В массив указатеей ложим адресс первых элементов строк
        }
    }
    

    gnom(ukaz, n); 										                  // Сортируем первые элементы Гномьей сортировкой 
    
    
    printf ("Отсортированный текст\n");
    for (i=0; i < n; i++)
     printf("%s", ukaz[i]);   						              // Печатаем отсорированные строки
    
    
    return 0;
}


void gnom (char** a, int m)  					              	//Гномья сортировка
{
    int i = 1;

    while(i < m)
    {
        if(i == 0 || *a[i - 1] <= *a[i])
            i++;
        else
        {
            char * pr = a[i];
            a[i] = a[i - 1];
            a[i - 1] = pr;
            i--;
        }
    }
}
